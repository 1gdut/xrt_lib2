<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
<!--    shape中如果不通过android:shape来指定形状时，默认是矩形，
    其中solid代表纯色，
    corners代表角，radius越大，圆角越大，
    stroke代表边框线-->
    <solid android:color="#4682B4" />
    <stroke
        android:width="1dip"
        android:color="#fefefe" />
    <corners android:radius="20dp" />
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

</shape>
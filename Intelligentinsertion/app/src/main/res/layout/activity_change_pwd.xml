<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE4E4"
    android:orientation="vertical"
    tools:context=".Activity.SetTimeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:elevation="15dp"
        app:cardCornerRadius="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#358DBE"
            android:gravity="center_horizontal"
            android:text="修改密码"
            android:textColor="#fff"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:elevation="15dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/change_spinner"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"

                    android:contentDescription="@string/app_name"
                    android:minHeight="48dp"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/changePwd_answer"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="请输入你的答案"
                    android:minHeight="48dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/new_password"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_background"
                    android:hint="请输入你的新密码"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:minHeight="40dp"
                    android:textSize="15sp" />

                <android.widget.Button
                    android:id="@+id/change_pwd_next"
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_background"
                    android:text="下一步"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <android.widget.Button
                    android:id="@+id/change_pwd_cancel"
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background1"
                    android:text="取消"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</LinearLayout>